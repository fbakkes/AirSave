<Window x:Class="AirSave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <src:GMapControl Grid.ColumnSpan="2" x:Name="MainMap" Zoom="13" MaxZoom="24" MinZoom="1"/>
        <Border BorderThickness="2" VerticalAlignment="Top">
            <StackPanel>
                <Button Content="Setup"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
